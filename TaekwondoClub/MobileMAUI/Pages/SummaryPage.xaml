<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileMAUI.Pages.SummaryPage">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">

            <Label Text="Welcome in notification center" SemanticProperties.HeadingLevel="Level1" FontSize="23" HorizontalOptions="Center" />

            <Picker x:Name="DaysPicker" Title="Select date range"
                ItemsSource="{Binding DaysList}"
                SelectedItem="{Binding Days, Mode=TwoWay}"
                SelectedIndexChanged="OnDaysPickerSelectedIndexChanged">
            </Picker>
            <Label Text="Amount of current customers:" FontSize="18" HorizontalOptions="Center" />
            <Label Text="{Binding Customers.Count}" FontSize="18" HorizontalOptions="Center" />

            <Label Text="Events upcoming:" FontSize="18" HorizontalOptions="Center" />
            <Label Text="{Binding Events.Count}" FontSize="18" HorizontalOptions="Center" />

            <Label Text="Amount of payments:" FontSize="18" HorizontalOptions="Center" />
            <Label Text="{Binding Payments.Count}" FontSize="18" HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
