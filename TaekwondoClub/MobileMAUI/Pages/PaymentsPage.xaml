<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MobileMAUI.Pages.PaymentsPage"
             Title="Payments">

    <ScrollView>
        <VerticalStackLayout>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Label Text="&lt;====&gt;" FontSize="18" Grid.Column="1" Grid.Row="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>

                <DatePicker x:Name="StartMonthYearPicker" 
                            Date="{Binding StartMonthYear, Mode=TwoWay}" Format="MM/yyyy"
                            Grid.Column="0" Grid.Row="0"
                            DateSelected="OnStartMonthYearPicker_DateSelected">
                </DatePicker>
                <DatePicker x:Name="EndMonthYearPicker"
                            Date="{Binding EndMonthYear, Mode=TwoWay}" Format="MM/yyyy"
                            Grid.Column="2" Grid.Row="0"
                            DateSelected="OnEndMonthYearPicker_DateSelected">
                </DatePicker>
            </Grid>

            <Label Text="Unpaid payments in selected month range:" HorizontalTextAlignment="Center" Padding="20" FontSize="18"/>
            <CollectionView ItemsSource="{Binding Payments}" >
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <xct:Expander Padding="0,0,0,20">
                            <xct:Expander.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30" />
                                    </Grid.RowDefinitions>

                                    <Label Text="{Binding Name}" FontAttributes="Bold" Grid.Column="0" HorizontalTextAlignment="Center"/>
                                    <Label Text="{Binding MonthYear}" FontAttributes="Bold" Grid.Column="1" HorizontalTextAlignment="Center"/>
                                    <Label Text="{Binding DueDate, StringFormat='{0:dd/MM/yyyy}'}" Grid.Column="2" HorizontalTextAlignment="Center"/>
                                </Grid>

                            </xct:Expander.Header>
                            <StackLayout>
                                <Label Text="{Binding Customer}" HorizontalTextAlignment="Center"/>
                                <Label Text="{Binding Paid}" HorizontalTextAlignment="Center"/>
                            </StackLayout>
                        </xct:Expander>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Button x:Name="NotifyDuePaymentsButton" Text="Notify customers about due payments with email" Clicked="OnNotifyDuePaymentsButton_Clicked"></Button>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>