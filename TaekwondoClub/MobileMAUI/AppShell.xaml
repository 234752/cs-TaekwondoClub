<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MobileMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MobileMAUI.Pages"
    xmlns:local="clr-namespace:MobileMAUI"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Summary"
        ContentTemplate="{DataTemplate pages:SummaryPage}"
        Route="SummaryPage" />

    <FlyoutItem Title="Upcoming Events">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate pages:UpcomingEventsPage}" />
        </Tab>
    </FlyoutItem>


</Shell>
