<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MobileMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MobileMAUI.Pages"
    xmlns:local="clr-namespace:MobileMAUI"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>

        <Tab Title="Summary" Icon="checklist.ico">
        <ShellContent ContentTemplate="{DataTemplate pages:SummaryPage}" />
        </Tab>
        <Tab Title="Events" Icon="calendar.ico">
            <ShellContent ContentTemplate="{DataTemplate pages:UpcomingEventsPage}" />
        </Tab>
        <Tab Title="Payments" Icon="payment.ico">
            <ShellContent ContentTemplate="{DataTemplate pages:PaymentsPage}" />
        </Tab>
                   

    </TabBar>
    

</Shell>
