<Page x:Class="DesktopWPF.Views.CustomerView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesktopWPF.Views"
      mc:Ignorable="d" 
      d:DesignHeight="950" d:DesignWidth="1920"
      Title="CustomerView">

    <Grid>
        <ListView Name="customerListView" ItemsSource="{Binding}" Margin="10,10,700,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="Auto" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Surname" Width="Auto" DisplayMemberBinding="{Binding Surname}" />
                    <GridViewColumn Header="Email" Width="Auto" DisplayMemberBinding="{Binding Email}" />
                    <GridViewColumn Header="Address" Width="Auto" DisplayMemberBinding="{Binding Address}" />
                    <GridViewColumn Header="Account Number" Width="Auto" DisplayMemberBinding="{Binding AccountNumber}" />
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Customer Details -->
        <Border Name="customerDetailsBorder" Margin="1240,10,10,10" BorderBrush="DarkGray" 
            BorderThickness="1" CornerRadius="5" 
            DataContext="{Binding SelectedItem, ElementName=customerListView}">
            <Grid Margin="9,0,0,-1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Customer Details" FontWeight="Bold" Margin="10" FontSize="16" />

                <Label Grid.Row="1" Content="Name:" Margin="10" />
                <TextBox Grid.Row="1" Name="nameTextBox" Margin="120,10,10,10" Text="{Binding Name}" />

                <Label Grid.Row="2" Content="Surname:" Margin="10" />
                <TextBox Grid.Row="2" Name="surnameTextBox" Margin="120,10,10,10" Text="{Binding Surname}" />

                <Label Grid.Row="3" Content="Email:" Margin="10" />
                <TextBox Grid.Row="3" Name="emailTextBox" Margin="120,10,10,10" Text="{Binding Email}" />

                <Label Grid.Row="4" Content="Address:" Margin="10" />
                <TextBox Grid.Row="4" Name="addressTextBox" Margin="120,10,10,10" Text="{Binding Address}" />

                <Label Grid.Row="5" Content="Account Number:" Margin="10" />
                <TextBox Grid.Row="5" Name="accountNumberTextBox" Margin="120,10,10,10" Text="{Binding AccountNumber}" />


                <!-- Save and Cancel Buttons -->
                <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10,20">
                    <Button Name="saveButton" Content="Save" Width="80" Height="30"  Margin="10" Click="saveButton_Click" />
                    <Button Name="cancelButton" Content="Cancel" Width="80" Height="30" Margin="10" Click="cancelButton_Click" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
