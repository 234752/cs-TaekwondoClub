<Page x:Class="DesktopWPF.Views.PaymentView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesktopWPF.Views" xmlns:system="clr-namespace:System;assembly=System.Runtime"
      mc:Ignorable="d" 
      d:DesignHeight="950" d:DesignWidth="1920"
      Title="PaymentView">

<Page.Resources>
    <CollectionViewSource x:Key="CustomersCollectionViewSource" Source="{Binding DataContext.Customers, ElementName=paymentListView}" />
    <CollectionViewSource x:Key="CustomersCollectionViewSource2" Source="{Binding DataContext.Customers, ElementName=paymentListView}" />
</Page.Resources>

    <Grid>
        <ListView Name="paymentListView" ItemsSource="{Binding Payments}" SelectedItem="{Binding SelectedPayment}" Margin="10,10,700,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="240" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Month/Year" Width="240" DisplayMemberBinding="{Binding MonthYear}" />
                    <GridViewColumn Header="Due Date" Width="240" DisplayMemberBinding="{Binding DueDate}" />
                    <GridViewColumn Header="Paid" Width="240" DisplayMemberBinding="{Binding Paid}" />
                    <GridViewColumn Header="Customer" Width="240" DisplayMemberBinding="{Binding CustomerId}" />
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Customer Details -->
        <Border Name="paymentDetailsBorder" Margin="1240,10,10,608" BorderBrush="DarkGray" 
            BorderThickness="1" CornerRadius="5" 
            DataContext="{Binding SelectedPayment}">
            <Grid Margin="9,0,0,9">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Payment Details" FontWeight="Bold" Margin="10" FontSize="16" />

                <Label Grid.Row="1" Content="Name:" Margin="10" />
                <TextBox Grid.Row="1" Name="nameTextBox" Margin="120,10,10,10" Text="{Binding Name}" />

                <Label Grid.Row="2" Content="Month/Year:" Margin="10" />
                <TextBox Grid.Row="2" Name="monthYearTextBox" Margin="120,10,10,10" Text="{Binding MonthYear}" />

                <Label Grid.Row="3" Content="Due Date:" Margin="10" />
                <DatePicker Grid.Row="3" Name="dueDatePicker" Margin="120,10,10,10" SelectedDate="{Binding DueDate}" />

                <Label Grid.Row="4" Content="Paid:" Margin="10" />
                <ComboBox Grid.Row="4" Name="paidComboBox" Margin="120,10,10,10" SelectedValue="{Binding Paid, Mode=TwoWay}">
                    <ComboBox.Items>
                        <system:String>yes</system:String>
                        <system:String>no</system:String>
                    </ComboBox.Items>
                    <ComboBox.Style>
                        <Style TargetType="ComboBox">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Paid}" Value="yes">
                                    <Setter Property="SelectedIndex" Value="0" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Paid}" Value="no">
                                    <Setter Property="SelectedIndex" Value="1" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Paid}" Value="yes">
                                    <Setter Property="SelectedIndex" Value="0" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                </ComboBox>

                <Label Grid.Row="5" Content="Customer:" Margin="10" />
                <ComboBox Grid.Row="5" Name="customerComboBox" Margin="120,10,10,10" 
                  SelectedValue="{Binding CustomerId, Mode=TwoWay}"
                  SelectedValuePath="Id"
                  ItemsSource="{Binding Source={StaticResource CustomersCollectionViewSource}}">
                </ComboBox>

                <Button Grid.Row="6" Name="removePaymentButton" Content="Remove Payment" Width="140" Height="30" Margin="509,10,10,10"  Click="removeButton_Click"/>

            </Grid>
        </Border>

        <Border Name="addPaymentBorder" Margin="1240,364,10,258" BorderBrush="DarkGray" 
            BorderThickness="1" CornerRadius="5"
            DataContext="{Binding NewPayment}">
            <Grid Margin="9,0,0,9">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Add New Payment" FontWeight="Bold" Margin="10" FontSize="16" />

                <Label Grid.Row="1" Content="Name:" Margin="10" />
                <TextBox Grid.Row="1" Name="newNameTextBox" Margin="120,10,10,10" Text="{Binding Name}" />

                <Label Grid.Row="2" Content="Month/Year:" Margin="10" />
                <TextBox Grid.Row="2" Name="newMonthYearTextBox" Margin="120,10,10,10" Text="{Binding MonthYear}" />

                <Label Grid.Row="3" Content="Due Date:" Margin="10" />
                <DatePicker Grid.Row="3" Name="newDueDatePicker" Margin="120,10,10,10" SelectedDate="{Binding DueDate}" />

                <Label Grid.Row="4" Content="Paid:" Margin="10" />
                <ComboBox Grid.Row="4" Name="newPaidComboBox" Margin="120,10,10,10" SelectedValue="{Binding Paid, Mode=TwoWay}">
                    <ComboBox.Items>
                        <system:String>yes</system:String>
                        <system:String>no</system:String>
                    </ComboBox.Items>
                    <ComboBox.Style>
                        <Style TargetType="ComboBox">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Paid}" Value="yes">
                                    <Setter Property="SelectedIndex" Value="0" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Paid}" Value="no">
                                    <Setter Property="SelectedIndex" Value="1" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Paid}" Value="yes">
                                    <Setter Property="SelectedIndex" Value="0" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                </ComboBox>

                <Label Grid.Row="5" Content="Customer:" Margin="10" />
                <ComboBox Grid.Row="5" Name="newCustomerComboBox" Margin="120,10,10,10" 
                  SelectedValue="{Binding CustomerId, Mode=TwoWay}"
                  SelectedValuePath="Id"
                  ItemsSource="{Binding Source={StaticResource CustomersCollectionViewSource2}}">
                </ComboBox>

                <Button Grid.Row="6" Name="saveNewPaymentButton" Content="Add As New Payment" Width="140" Height="30" Margin="509,10,10,7" Click="saveNewPaymentButton_Click" />
            </Grid>
        </Border>
        <!-- Save and Cancel Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10">
            <Button Name="saveButton" Content="Save All" Width="100" Height="30"  Margin="10" Click="saveButton_Click" />
            <Button Name="cancelButton" Content="Revert Changes" Width="100" Height="30" Margin="10" Click="cancelButton_Click" />
        </StackPanel>
    </Grid>
</Page>
